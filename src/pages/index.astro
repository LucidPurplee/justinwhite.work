---
import Root from "../components/root.astro";
import Sidenav from "../components/standard/sideNavigation.astro";
import Cell from "../components/standard/bentoCell.astro"
import AnimatedCell from "../components/standard/animatedBentoCell.astro"
---
<Root title="Page2">
  <div class="flex flex-col h-screen w-screen bg-base-200 gap-2 p-2">
    <header class="navbar">
      <div class="flex-1 ml-20">
        <span class="text-3xl font-bold">Justinwhite.work</span>
      </div>
    </header>

    <div class="flex flex-1 gap-2 min-h-0">
      <aside class="menu w-20">
       <Sidenav/>
      </aside>

      <main class="card flex-1 overflow-y-auto overflow-x-hidden pr-2">
        <div class="flex h-full flex-wrap gap-4">

          <AnimatedCell class="min-w-[600px] min-h-[400px] bg-base-100">
            <span> Element </span>
          </AnimatedCell>

          <AnimatedCell class="min-w-[400px] min-h-[600px] bg-base-100">
            <span> Element </span>
          </AnimatedCell>

        </div>
      </main>
    </div>
  </div>
</Root>