---
import Root from "../../components/root.astro";
import Sidenav from "../../components/standard/sideNavigation.astro";
import Cell from "../../components/standard/bentoCell.astro";
---

<Root title="Page2">
  <div
    id="page-container"
    class="flex flex-col h-screen w-screen bg-base-200 gap-2 p-2"
  >
    <header id="page-header" class="navbar">
      <div class="flex-1 ml-20">
        <span class="text-3xl font-bold">myname.work</span>
      </div>
    </header>

    <div class="flex flex-1 gap-2 min-h-0">
      <aside id="page-sidebar" class="menu w-20">
        <Sidenav />
      </aside>

      <main
        id="page-main"
        class="card flex-1 overflow-y-auto overflow-x-hidden pr-2"
      >
        <div class="flex h-full flex-wrap gap-4">
          <Cell id="main-cell" class="min-w-[600px] min-h-[400px] bg-base-100">
            
            
            <div class="p-6 bg-base-100 rounded-lg shadow-lg space-y-4">
  <div class="w-24 h-6 bg-primary/30 rounded animate-pulse"></div>
  <div class="w-32 h-6 bg-secondary/30 rounded animate-pulse"></div>
  <div class="w-full h-48 bg-accent/20 rounded animate-pulse"></div>

  <div class="flex gap-4">
    <div class="flex-1 h-10 bg-info/20 rounded animate-pulse"></div>
    <div class="flex-1 h-10 bg-success/20 rounded animate-pulse"></div>
  </div>

  <div class="flex justify-end gap-2">
    <button class="btn btn-primary btn-sm animate-pulse" disabled>Primary</button>
    <button class="btn btn-secondary btn-sm animate-pulse" disabled>Secondary</button>
  </div>
</div>



          </Cell>
        </div>
      </main>
    </div>
  </div>

  <script>
    const elements = {
      header: document.getElementById("page-header"),
      sidebar: document.getElementById("page-sidebar"),
      main: document.getElementById("page-container"),
      cell: document.getElementById("main-cell"),
    };

    const checkFullscreen = () => {
      const isFullscreen = window.location.hash === "#fullscreen";

      elements.header.style.display = isFullscreen ? "none" : "";
      elements.sidebar.style.display = isFullscreen ? "none" : "";
      elements.main.style.backgroundColor = isFullscreen ? "white" : "";
      elements.cell.style.backgroundColor = isFullscreen ? "transparent" : "";
    };

    ["hashchange", "popstate"].forEach((evt) =>
      window.addEventListener(evt, checkFullscreen)
    );

    // Initial check on load
    checkFullscreen();
  </script>
</Root>
