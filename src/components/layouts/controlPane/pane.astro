---
import Bio from "./bioCard.jsx";
import Card from "../../library/card.jsx";
import Categories from "./categories.jsx";
---

<aside
  class="flex flex-col items-center min-h-full flex-1 md:max-w-[48%] lg:max-w-[32%] 2xl:max-w-[28%] sticky top-0 max-h-screen overflow-hidden overflow-visible"
  transition:persist
>
  <div class="flex flex-col w-full overflow-visible">
    <Bio client:load />
    <div class="flex flex-wrap flex-row w-full"></div>
  </div>

  <div class="overflow-y-auto flex-1 w-full pb-[16%]">
    <Categories client:load />
  </div>

  <div class="
        navbar w-full max-w-full
        p-2 pb-4
        max-h-14 h-14
    ">
    <div class="flex-none">
      <ul class="menu menu-horizontal menu-star px-1">
        <li><a href="/">Home</a></li>
        <li><a>Github</a></li>
      </ul>
    </div>
  </div>


</aside>
