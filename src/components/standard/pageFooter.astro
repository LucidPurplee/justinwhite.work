---

<footer class={`bg-base-200 text-base-content text-base rounded ${customClass}`}>
  <!-- Link grid -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 px-6 py-10">
    
    <!-- Education / Awards -->
    <nav class="flex flex-col">
      <h3 class="text-lg footer-title">
        <a href="/awards" class="link link-hover">Education & Awards</a>
      </h3>
      <div class="flex flex-col gap-2 mt-2">
        {achievements.map((ach, i) => (
          <a href={ach.link} class="link link-hover" key={i}>
            {ach.badges.map((b, j) => (
              <span
                key={j}
                class={`badge mr-1 mb-1 ${
                  j === ach.badges.length - 1 ? "badge-accent" : "badge-outline"
                }`}
              >
                {b}
              </span>
            ))}
            {ach.title}
          </a>
        ))}
      </div>
    </nav>

    <!-- Contact -->
    <div>
      <h3 class="text-lg footer-title">Contact & socials</h3>
      <ul class="mt-2 flex gap-2 list-none">
        {contactItems.map((item, i) => (
          <li key={i}>
            <div class="tooltip" data-tip={item.tooltip}>
              <a href={item.href} class="badge gap-2">
                <span class="inline-grid *:[grid-area:1/1]">
                  <div class={`status ${item.status} animate-ping`} />
                  <div class={`status ${item.status}`} />
                </span>
                {item.label}
              </a>
            </div>
          </li>
        ))}
      </ul>
    </div>
  </div>

  <!-- Divider -->
  <div class="divider"></div>

  <!-- Bottom bar -->
  <aside class="flex flex-col sm:flex-row gap-6 justify-center sm:justify-between items-center px-6 py-4">
    <div class="flex items-center gap-4">
      <div class="avatar">
        <div class="w-24 rounded-full">
          <img src="/icos/LucidIcon03.jpg" />
        </div>
      </div>
      <div>
        <p class="text-2xl font-bold">Justin White</p>
        <small>Copyright Â© 2025 - All rights reserved</small>
      </div>
    </div>
  </aside>
</footer>
